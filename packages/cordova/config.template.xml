<?xml version='1.0' encoding='utf-8'?>
<widget
    android-packageName="{{ANDROID_APP_ID}}"
    id="{{ANDROID_APP_ID}}"
    ios-CFBundleIdentifier="{{IOS_APP_ID}}"
    version="{{VERSION}}"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
>
    <name>Atlas</name>
    <description>
        AtlasBus app for bus passengers
    </description>
    <author email="info@atlasbus.ltd" href="http://atlasbus.ltd">
        AtlasBus Limited
    </author>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="atlasbus://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:icon="@mipmap/ic_launcher" android:roundIcon="@mipmap/ic_launcher_round" />
        </edit-config>
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application/activity">
            <activity android:exported="true"/>
        </edit-config>
        <resource-file src="res/icon/current/android/mipmap-hdpi/ic_launcher.png" target="app/src/main/res/mipmap-hdpi/ic_launcher.png" />
        <resource-file src="res/icon/current/android/mipmap-hdpi/ic_launcher_round.png" target="app/src/main/res/mipmap-hdpi/ic_launcher_round.png" />
        <resource-file src="res/icon/current/android/mipmap-hdpi-v26/ic_launcher_foreground.png" target="app/src/main/res/mipmap-hdpi-v26/ic_launcher_foreground.png" />

        <resource-file src="res/icon/current/android/mipmap-mdpi/ic_launcher.png" target="app/src/main/res/mipmap-mdpi/ic_launcher.png" />
        <resource-file src="res/icon/current/android/mipmap-mdpi/ic_launcher_round.png" target="app/src/main/res/mipmap-mdpi/ic_launcher_round.png" />
        <resource-file src="res/icon/current/android/mipmap-mdpi-v26/ic_launcher_foreground.png" target="app/src/main/res/mipmap-mdpi-v26/ic_launcher_foreground.png" />

        <resource-file src="res/icon/current/android/mipmap-xhdpi/ic_launcher.png" target="app/src/main/res/mipmap-xhdpi/ic_launcher.png" />
        <resource-file src="res/icon/current/android/mipmap-xhdpi/ic_launcher_round.png" target="app/src/main/res/mipmap-xhdpi/ic_launcher_round.png" />
        <resource-file src="res/icon/current/android/mipmap-xhdpi-v26/ic_launcher_foreground.png" target="app/src/main/res/mipmap-xhdpi-v26/ic_launcher_foreground.png" />

        <resource-file src="res/icon/current/android/mipmap-xxhdpi/ic_launcher.png" target="app/src/main/res/mipmap-xxhdpi/ic_launcher.png" />
        <resource-file src="res/icon/current/android/mipmap-xxhdpi/ic_launcher_round.png" target="app/src/main/res/mipmap-xxhdpi/ic_launcher_round.png" />
        <resource-file src="res/icon/current/android/mipmap-xxhdpi-v26/ic_launcher_foreground.png" target="app/src/main/res/mipmap-xxhdpi-v26/ic_launcher_foreground.png" />

        <resource-file src="res/icon/current/android/mipmap-xxxhdpi/ic_launcher.png" target="app/src/main/res/mipmap-xxxhdpi/ic_launcher.png" />
        <resource-file src="res/icon/current/android/mipmap-xxxhdpi/ic_launcher_round.png" target="app/src/main/res/mipmap-xxxhdpi/ic_launcher_round.png" />
        <resource-file src="res/icon/current/android/mipmap-xxxhdpi-v26/ic_launcher_foreground.png" target="app/src/main/res/mipmap-xxxhdpi-v26/ic_launcher_foreground.png" />

        <resource-file src="res/icon/current/android/mipmap-hdpi-v26/ic_launcher_round.xml" target="app/src/main/res/mipmap-hdpi-v26/ic_launcher_round.xml" />
        <resource-file src="res/icon/current/android/mipmap-hdpi-v26/ic_launcher.xml" target="app/src/main/res/mipmap-hdpi-v26/ic_launcher.xml" />

        <resource-file src="res/icon/current/android/mipmap-mdpi-v26/ic_launcher_round.xml" target="app/src/main/res/mipmap-mdpi-v26/ic_launcher_round.xml" />
        <resource-file src="res/icon/current/android/mipmap-mdpi-v26/ic_launcher.xml" target="app/src/main/res/mipmap-mdpi-v26/ic_launcher.xml" />

        <resource-file src="res/icon/current/android/mipmap-xhdpi-v26/ic_launcher_round.xml" target="app/src/main/res/mipmap-xhdpi-v26/ic_launcher_round.xml" />
        <resource-file src="res/icon/current/android/mipmap-xhdpi-v26/ic_launcher.xml" target="app/src/main/res/mipmap-xhdpi-v26/ic_launcher.xml" />

        <resource-file src="res/icon/current/android/mipmap-xxhdpi-v26/ic_launcher_round.xml" target="app/src/main/res/mipmap-xxhdpi-v26/ic_launcher_round.xml" />
        <resource-file src="res/icon/current/android/mipmap-xxhdpi-v26/ic_launcher.xml" target="app/src/main/res/mipmap-xxhdpi-v26/ic_launcher.xml" />

        <resource-file src="res/icon/current/android/mipmap-xxxhdpi-v26/ic_launcher_round.xml" target="app/src/main/res/mipmap-xxxhdpi-v26/ic_launcher_round.xml" />
        <resource-file src="res/icon/current/android/mipmap-xxxhdpi-v26/ic_launcher.xml" target="app/src/main/res/mipmap-xxxhdpi-v26/ic_launcher.xml" />

        <resource-file src="res/icon/current/android/drawable-hdpi/ic_stat_main.png" target="app/src/main/res/drawable-hdpi/ic_stat_main.png" />
        <resource-file src="res/icon/current/android/drawable-mdpi/ic_stat_main.png" target="app/src/main/res/drawable-mdpi/ic_stat_main.png" />
        <resource-file src="res/icon/current/android/drawable-xhdpi/ic_stat_main.png" target="app/src/main/res/drawable-xhdpi/ic_stat_main.png" />
        <resource-file src="res/icon/current/android/drawable-xxhdpi/ic_stat_main.png" target="app/src/main/res/drawable-xxhdpi/ic_stat_main.png" />
        <resource-file src="res/icon/current/android/drawable-xxxhdpi/ic_stat_main.png" target="app/src/main/res/drawable-xxxhdpi/ic_stat_main.png" />

        <resource-file src="res/icon/current/android/values/ic_launcher_background.xml" target="app/src/main/res/values/ic_launcher_background.xml" />

        <splash src="res/screen/android/splash-port-hdpi.png" density="port-hdpi" />
        <splash src="res/screen/android/splash-port-ldpi.png" density="port-ldpi" />
        <splash src="res/screen/android/splash-port-mdpi.png" density="port-mdpi" />
        <splash src="res/screen/android/splash-port-xhdpi.png" density="port-xhdpi" />
        <splash src="res/screen/android/splash-port-xxhdpi.png" density="port-xxhdpi" />
        <splash src="res/screen/android/splash-port-xxxhdpi.png" density="port-xxxhdpi" />

        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="CodePushDeploymentKey" value="{{CODE_PUSH_ANDROID}}" />
        <preference name="APP_SECRET" value="{{APP_CENTER_ANDROID}}" />
        <preference name="AndroidLaunchMode" value="singleTask" />
<!--        <preference name="loadUrlTimeoutValue" value="700000" />-->
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="StatusBarOverlaysWebView" value="true" />
        <!-- <preference name="StatusBarBackgroundColor" value="#1154C8" /> -->
        <preference name="StatusBarStyle" value="lightcontent" />
        <icon height="20" src="res/icon/current/ios/icon-20.png" width="20" />
        <icon height="167" src="res/icon/current/ios/icon-83.5@2x.png" width="167" />
        <icon height="180" src="res/icon/current/ios/icon-60@3x.png" width="180" />
        <icon height="60" src="res/icon/current/ios/icon-60.png" width="60" />
        <icon height="120" src="res/icon/current/ios/icon-60@2x.png" width="120" />
        <icon height="76" src="res/icon/current/ios/icon-76.png" width="76" />
        <icon height="152" src="res/icon/current/ios/icon-76@2x.png" width="152" />
        <icon height="40" src="res/icon/current/ios/icon-40.png" width="40" />
        <icon height="80" src="res/icon/current/ios/icon-40@2x.png" width="80" />
        <icon height="57" src="res/icon/current/ios/icon.png" width="57" />
        <icon height="114" src="res/icon/current/ios/icon@2x.png" width="114" />
        <icon height="72" src="res/icon/current/ios/icon-72.png" width="72" />
        <icon height="144" src="res/icon/current/ios/icon-72@2x.png" width="144" />
        <icon height="29" src="res/icon/current/ios/icon-small.png" width="29" />
        <icon height="58" src="res/icon/current/ios/icon-small@2x.png" width="58" />
        <icon height="87" src="res/icon/current/ios/icon-small@3x.png" width="87" />
        <icon height="50" src="res/icon/current/ios/icon-50.png" width="50" />
        <icon height="100" src="res/icon/current/ios/icon-50@2x.png" width="100" />
        <icon height="1024" src="res/icon/current/ios/icon-1024.png" width="1024" />
        <preference name="CodePushDeploymentKey" value="{{CODE_PUSH_IOS}}" />
        <preference name="APP_SECRET" value="{{APP_CENTER_IOS}}" />
        <config-file target="*-Debug.plist" parent="com.apple.developer.associated-domains">
            <array>
                <string>applinks:atlasbus.app</string>
            </array>
        </config-file>

        <config-file target="*-Release.plist" parent="com.apple.developer.associated-domains">
            <array>
                <string>applinks:atlasbus.app</string>
            </array>
        </config-file>
        <config-file target="*-Info.plist" parent="ITSAppUsesNonExemptEncryption" mode="add">
            <false/>
        </config-file>
        <splash src="res/screen/ios/Default@2x~universal~anyany.png" />

        <preference name="WKWebViewOnly" value="true" />
        <feature name="CDVWKWebViewEngine">`
            <param name="ios-package" value="CDVWKWebViewEngine" />
        </feature>
        <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
    </platform>
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <allow-navigation href="https://checkout.rbk.money/*" />
    <allow-navigation href="https://www.google.com/recaptcha/*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="AllowBackForwardNavigationGestures" value="false" />
    <preference name="ScrollEnabled" value="true" />
    <preference name="android-minSdkVersion" value="19" />
    <preference name="android-targetSdkVersion" value="33" />
    <preference name="Hostname" value="atlasbus.app" />
    <preference name="Scheme" value="https" />
    <allow-navigation href="https://*.atlasbus.app/*" />
    <allow-navigation href="https://*.atlasbus.ru/*" />
    <allow-navigation href="https://docs.google.com/*" />
    <allow-navigation href="ionic://*" />
    <hook src="scripts/appAfterPrepare.js" type="after_prepare" />
    <hook src="scripts/appBeforePrepare.js" type="before_prepare" />
    <hook src="scripts/appBeforePrepare.js" type="before_platform_add" />
    <hook src="scripts/appAfterPlatformAdd.js" type="after_platform_add" />
    <content src="index.html" />
</widget>
